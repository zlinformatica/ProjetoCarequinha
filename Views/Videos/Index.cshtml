@model ProjetoCarequinha.Models.VideoAula

@{
    ViewData["Title"] = "Aulas do Mosh Hamedani";
    var aulas = ViewBag.Aulas as List<ProjetoCarequinha.Models.VideoAula>;
    string search = ViewBag.Search ?? "";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">ðŸ“š Curso ASP.NET | mvc/C# - Mosh Hamedani</h1>

    <form method="get" class="mb-3 row g-2">
        <div class="col-md-8">
            <input type="text" name="search" class="form-control" placeholder="Pesquisar por nÃºmero ou tÃ­tulo" value="@search" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Pesquisar</button>
        </div>
        <div class="col-md-2">
            <a href="/Videos" class="btn btn-secondary w-100">Limpar</a>
        </div>
    </form>

    <form method="get" class="mb-4">
        <select name="id" class="form-select" onchange="this.form.submit()">
            <option value="">-- Escolha uma aula --</option>
            @foreach (var aula in aulas)
            {
                <option value="@aula.Id" selected="@(Model != null && Model.Id == aula.Id)">
                    Aula @aula.Id - @aula.Title
                </option>



            }
        </select>
    </form>

    @if (Model != null)
    {
        <div class="ratio ratio-16x9">
            <iframe src="https://www.youtube.com/embed/@Model.YouTubeId" allowfullscreen></iframe>
        </div>
        <h3 class="mt-3">@Model.Title</h3>
    }
</div>
