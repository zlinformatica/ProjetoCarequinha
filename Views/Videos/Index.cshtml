@model ProjetoCarequinha.Models.VideoAula

@{
    ViewData["Title"] = "Aulas do Mosh Hamedani";
    var aulas = ViewBag.Aulas as List<ProjetoCarequinha.Models.VideoAula>;
    string search = ViewBag.Search ?? "";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">üìö Curso ASP.NET | Mvc/C# - Mosh Hamedani</h1>

    <form method="get" class="mb-3 row g-2">
        @using (Html.BeginForm("Index", "Videos", FormMethod.Get))
        {
            @using (Html.BeginForm("Index", "Videos", FormMethod.Get))
            {
                <!--
                    Desktop (md+): tudo na MESMA linha (nowrap)
                    Mobile (xs-sm): input ocupa a linha inteira e os bot√µes quebram para BAIXO
                -->
                <div class="mb-3 d-flex align-items-center flex-wrap flex-md-nowrap">
                    <!-- Campo de pesquisa -->
                    @Html.TextBox(
                        "search",
                        null,
                        new {
                            @class = "form-control me-2 flex-grow-1 w-100 w-md-auto mb-2 mb-md-0",
                            placeholder = "Pesquisar por n√∫mero ou t√≠tulo"
                        }
                    )

                    <!-- Bot√£o Pesquisar -->
                    <button type="submit"
                            class="btn btn-primary btn-sm me-2 mb-2 mb-md-0"
                            style="min-width:120px;">
                        üîç Pesquisar
                    </button>

                    <!-- Bot√£o Limpar -->
                    <a href="/Videos"
                       class="btn btn-secondary btn-sm me-2 mb-2 mb-md-0"
                       style="min-width:120px;">
                        üßπ Limpar
                    </a>

                    <!-- Bot√£o √Årea Administrativa -->
                    <a class="btn btn-dark btn-sm mb-2 mb-md-0"
                       asp-controller="VideoAulaAdmin"
                       asp-action="Index"
                       style="min-width:120px;">
                        ‚öôÔ∏è Manuten√ß√£o
                    </a>
                </div>
            }
        }
    </form>

    <form method="get" class="mb-4">
        <select name="id" class="form-select" onchange="this.form.submit()">
            <option value="">-- Escolha uma op√ß√£o --</option>
            @foreach (var aula in aulas)
            {
                <option value="@aula.Id" selected="@(Model != null && Model.Id == aula.Id)">
                    Aula @aula.Id - @aula.Title
                </option>
            }
        </select>
    </form>

    @if (Model != null)
    {
        <div class="ratio ratio-16x9">
            <iframe src="https://www.youtube.com/embed/@Model.YouTubeUrl" allowfullscreen></iframe>
        </div>
        <h3 class="mt-3">@Model.Title</h3>
    }
</div>
