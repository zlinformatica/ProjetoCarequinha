@model ProjetoCarequinha.Models.VideoAula

@{
    ViewData["Title"] = "Excluir Aula";
}

<div class="container mt-4">
    <h2>🗑️ Excluir Aula</h2>

    <h4>Tem certeza que deseja excluir esta aula?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">URL do YouTube</dt>
        <dd class="col-sm-10">@Model.YouTubeUrl</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
